<!-- Here we are using Foundations Section to create the tabs. See http://foundation.zurb.com/docs/components/section.html for more info -->
<div class="product-tabs">
  <dl class="tabs" data-tab>
    <?php $counter = 0; ?>
    <?php foreach ($this->getTabs() as $_index => $_tab): ?>
      <?php if($this->getChildHtml($_tab['alias'])): ?>
        <dd <?php echo ($counter == 0 ? 'class="active"' : false); ?>><a href="#<?php echo $_tab['alias']?>"><?php echo $_tab['title']?></a></dd>
        <?php $counter++; ?>
      <?php endif; ?>
    <?php endforeach; ?>
  </dl>
  <div class="tabs-content">
  <?php $counter = 0; ?>
  <?php foreach ($this->getTabs() as $_index => $_tab): ?>
    <?php if($this->getChildHtml($_tab['alias'])): ?>
      <h2><?php echo $_tab['title']?></h2>
      <div class="content<?php echo ($counter == 0 ? ' active' : false); ?>" id="<?php echo $_tab['alias']?>">
        <?php echo $this->getChildHtml($_tab['alias']) ?>
      </div>
    <?php $counter++; ?>
    <?php endif; ?>
  <?php endforeach; ?>
  </div>
</div>
